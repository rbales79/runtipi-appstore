{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "habittrove",
      "image": "dohsimpson/habittrove:v0.2.30",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
          { "key": "AUTH_SECRET", "value": "${HABITTROVE_AUTH_SECRET}" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/app",
          "containerPath": "/app/data"
        }
      ]
    }
  ]
}