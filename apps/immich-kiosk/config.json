{
  "$schema": "https://schemas.runtipi.io/app-info.json",
  "name": "Immich Kiosk",
  "available": true,
  "exposable": true,
  "dynamic_config": true,
  "port": 8130,
  "id": "immich-kiosk",
  "tipi_version": 22,
  "version": "0.28.1",
  "categories": [
    "photography",
    "media"
  ],
  "description": "Lightweight slideshow for running on kiosk devices and browsers that uses Immich as a data source.",
  "short_desc": "Slideshow for Immich",
  "author": "damongolding",
  "source": "https://github.com/damongolding/immich-kiosk",
  "form_fields": [
    {
      "type": "text",
      "label": "Immich Server URL",
      "placeholder": "http://immich:2283",
      "required": true,
      "env_variable": "KIOSK_IMMICH_URL"
    },
    {
      "type": "password",
      "label": "Immich API Key",
      "required": true,
      "hint": "https://api.immich.app/getting-started",
      "env_variable": "KIOSK_IMMICH_API_KEY"
    },
    {
      "type": "boolean",
      "label": "Enable URL builder",
      "required": false,
      "default": false,
      "env_variable": "KIOSK_ENABLE_URL_BUILDER",
      "hint": "Enable the URL builder endpoint at /url-builder"
    },
    {
      "type": "password",
      "label": "Password for Kiosk",
      "required": false,
      "env_variable": "KIOSK_PASSWORD",
      "placeholder": "Leave empty to disable",
      "hint": "Leave empty to disable"
    }
  ],
  "supported_architectures": [
    "arm64",
    "amd64"
  ],
  "created_at": 1737452289124,
  "updated_at": 1764642750685,
  "min_tipi_version": "4.5.0"
}