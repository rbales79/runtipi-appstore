{
  "schemaVersion": 2,
  "services": [
    {
      "name": "vault",
      "image": "hashicorp/vault:1.18.3",
      "container_name": "vault",
      "cap_add": ["IPC_LOCK"],
      "isMain": true,
      "environment": [
        {
          "key": "VAULT_ADDR",
          "value": "http://0.0.0.0:8200"
        }
      ],
      "volumes": [
        {
          "type": "bind",
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/vault/file"
        },
        {
          "type": "bind",
          "hostPath": "${APP_DATA_DIR}/logs",
          "containerPath": "/vault/logs"
        },
        {
          "type": "bind",
          "hostPath": "${APP_DATA_DIR}/config.hcl",
          "containerPath": "/vault/config/config.hcl"
        }
      ],
      "ports": [
        {
          "containerPort": 8200,
          "hostPort": 8200
        }
      ]
    }
  ]
}
