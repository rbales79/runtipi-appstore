{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "gitea-runner",
      "image": "docker.gitea.com/act_runner:0.2.13",
      "environment": [
        { "key": "GITEA_INSTANCE_URL", "value": "${GITEA_INSTANCE_URL:-http://gitea}" },
        { "key": "GITEA_RUNNER_REGISTRATION_TOKEN", "value": "${GITEA_RUNNER_REGISTRATION_TOKEN}" },
        { "key": "GITEA_RUNNER_NAME", "value": "gitea-runner" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/data",
          "containerPath": "/data"
        },
        {
          "hostPath": "/var/run/docker.sock",
          "containerPath": "/var/run/docker.sock"
        }
      ]
    }
  ]
}