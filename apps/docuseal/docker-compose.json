{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "docuseal",
      "image": "docuseal/docuseal:2.2.4",
      "isMain": true,
      "internalPort": 3000,
      "environment": [
        { "key": "HOST", "value": "${APP_DOMAIN}" },
        { "key": "DATABASE_URL", "value": "postgresql://docuseal:${DOCUSEAL_DB_PASSWORD}@docuseal-db:5432/docuseal" },
        { "key": "SECRET_KEY_BASE", "value": "${DOCUSEAL_SECRET_KEY}" }
      ],
      "dependsOn": {
        "docuseal-db": {
          "condition": "service_healthy"
        }
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/app/docuseal",
          "containerPath": "/data/docuseal"
        }
      ]
    },
    {
      "name": "docuseal-db",
      "image": "postgres:15",
      "environment": [
        { "key": "POSTGRES_USER", "value": "docuseal" },
        { "key": "POSTGRES_PASSWORD", "value": "${DOCUSEAL_DB_PASSWORD}" },
        { "key": "POSTGRES_DB", "value": "docuseal" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/app/pg_data",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "interval": "5s",
        "timeout": "5s",
        "retries": 5,
        "test": "pg_isready -d $$POSTGRES_DB -U $$POSTGRES_USER"
      }
    }
  ]
}
