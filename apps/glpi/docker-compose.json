{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "glpi",
      "image": "ghcr.io/glpi-project/glpi:11.0.4",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        { "key": "GLPI_DB_HOST", "value": "glpi-db" },
        { "key": "GLPI_DB_PORT", "value": "3306" },
        { "key": "GLPI_DB_NAME", "value": "glpi" },
        { "key": "GLPI_DB_USER", "value": "glpi" },
        { "key": "GLPI_DB_PASSWORD", "value": "${GLPI_DB_PASSWORD}" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/glpi",
          "containerPath": "/var/glpi"
        }
      ]
    },
    {
      "name": "glpi-db",
      "image": "mysql",
      "environment": [
        { "key": "MYSQL_RANDOM_ROOT_PASSWORD", "value": "yes" },
        { "key": "MYSQL_DATABASE", "value": "glpi" },
        { "key": "MYSQL_USER", "value": "glpi" },
        { "key": "MYSQL_PASSWORD", "value": "${GLPI_DB_PASSWORD}" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/mysql"
        }
      ],
      "healthCheck": {
        "interval": "5s",
        "timeout": "5s",
        "retries": 10,
        "test": "mysqladmin ping -h 127.0.0.1 -u $$MYSQL_USER --password=$$MYSQL_PASSWORD"
      }
    }
  ]
}
